<h1 style="margin-top: 100px;">Blog Posts</h1>
<% @posts.each do |post| %>
    <div class="card" style="padding: 10px; margin-bottom: 10px;">
        <h3><%= post.title %></h3>
        <p><%= post.body %></p>
        <%= link_to "Read More", post_path(post), :class => 'btn btn-primary' %>
    </div>
<% end %>